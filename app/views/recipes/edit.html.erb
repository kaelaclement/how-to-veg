<div><% if flash[:alert] %>
  <%= flash[:alert] %>
<% end %></div>

<h1>Edit <%= @recipe.title %></h1>

<%= form_for [@user, @recipe] do |f| %>
  <p><%= f.label :title %><br>
  <%= f.text_field :title %></p>

  <p>Please enter ingredients separated by commas<br>
  (e.g. "1 cup diced onion, 1lb mushrooms, 1 red bell pepper...")<br>
  <%= f.text_area :ingredients %></p>

  <p><%= f.label :instructions %><br>
  <%= f.text_area :instructions %></p>

  <p><%= f.submit "Edit Recipe" %></p>
<% end %>

<%= link_to "Delete Recipe", user_recipe_path(@user, @recipe), method: :delete %>