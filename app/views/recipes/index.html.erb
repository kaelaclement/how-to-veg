<h1><%= user_recipes %></h1>

<% if @button == "recent" %>
  <p>Showing most popular.</p>
  <%= form_tag(recipes_path, method: :get) do %>
    <%= submit_tag ("Order by most recent") %>
  <% end %>
<% elsif @button == "popular" %>
  <p>Showing most recent.</p>
  <%= form_tag(recipes_path, method: :get) do %>
    <input type="hidden" name="search" value="popular">
    <%= submit_tag ("Order by most popular") %>
  <% end %>
<% end %>

<% @recipes.each do |recipe| %>
  <p><%= link_to recipe.title, recipe_path(recipe) %></p>
<% end %>
