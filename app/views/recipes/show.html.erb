<h1><%= @recipe.title %></h1>
<h4>By: <%= link_to @recipe.author.name, user_path(@recipe.author) %></h4>
<h3>Ingredients</h3>
<ul>
<% @ingredients.each do |ingredient| %>
  <li><%= ingredient %></li>
<% end %>
</ul>

<p><%= @recipe.instructions %></p>

<% if @recipe.author == current_user %>
  <%= link_to "Edit this recipe", edit_user_recipe_path(@recipe.author, @recipe) %>
<% end %>

<h3>Reviews for <%= @recipe.title %>:</h3>

<p><strong><%= pluralize(@recipe.total_likes, "like") %></strong></p>

<% @recipe.reviews.each do |review| %>
  <p>
  <% if review.comment %>
  <%= link_to review.user.name, user_path(review.user) %><br>
  <% end %>
  <%= review.comment %></p>
<% end %>

<h4>Add A Review</h4>

<% if flash[:alert] %>
  <p><%= flash[:alert] %></p>
<% end %>

<%= form_with url: recipe_reviews_path(@recipe), local: true do |f| %>
  <p><%= f.label :like %>: 
  <%= check_box_tag 'review[like]'%></p>

  <p><%= f.label :comment %><br>
  <%= text_area_tag 'review[comment]' %></p>

  <%= f.submit "Comment" %>
<% end %>