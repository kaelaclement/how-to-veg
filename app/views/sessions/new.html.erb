<h1>Log In</h1>

<%= link_to('Log In with Facebook', '/auth/facebook') %>

<p>or if you have an account and password:</p>

<% if flash[:alert] %>
  <p><%= flash[:alert] %></p>
<% end %>

<%= form_with url: login_path do |f| %>
  <p><%= f.label :email %>: 
  <%= f.text_field :email %></p>
  
  <p><%= f.label :password %>: 
  <%= f.password_field :password %></p>
  
  <p><%= f.submit "Log In" %></p>
<% end %>