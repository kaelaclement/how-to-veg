<!DOCTYPE html>
<html>
  <head>
    <title>HowToVeg</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="text-center bg-light">
      <h1>How To Veg</h1>
      <p class="text-muted">Easy, delicious, vegetarian.</p>
    </div>
    <div class="nav justify-content-center sticky-top">
      <%= link_to "Recipes", recipes_url, class: "nav-link" %>
      <% if session[:user_id] %>
        <%= link_to "Profile", user_url(current_user), class: "nav-link" %>
        <%= link_to "Log Out", logout_url, method: "post", class: "nav-link" %>
      <% else %>
        <%= link_to "Sign Up", new_user_url, class: "nav-link" %>
        <%= link_to "Log In", login_url, class: "nav-link" %>
      <% end %>
    </div>
    <div class="container-fluid">
      <%= yield %>
    </div>
  </body>
</html>
